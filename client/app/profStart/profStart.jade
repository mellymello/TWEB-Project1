div(ng-include='"components/navbar/navbar.html"')
.container.pull-left.col-md-6
  h1.page-header Create a new Lecture:
  .form-group
    label Lecture Title
    input.form-control.input-md(ng-model='lectureTitle', type='text')
  .form-group
    label Description
    input.form-control.input-md(ng-model='lectureDescription', type='text')
  label PDF slides
  input(type='file', ng-file-select='onFileSelect($files)', name='pdf_file')#newLecturePdf
  br
  button.btn.btn-primary(type='submit', ng-click='createLesson()') Create !
  br




.container.pull-right.col-md-6
  h1.page-header Archived:
  .panel.panel-default
    table.table.table-striped
      tr
        th Title
        th Date created
        th Start
        th Statistics
      tr(ng-repeat="lecture in pastLectures")
        td {{lecture.title}}
        td {{lecture.creationDate}}
        td
          button.btn.btn-default(type='button', ng-click='startLecture(lecture._id)') Start lecture
        td
          button.btn.btn-default(type='button', ng-click='stats(lecture._id)') View Stats

  .progress
    .progress-bar(role='progressbar', aria-valuenow='{{ uploadProgress }}', aria-valuemin='0', aria-valuemax='100', style='width: {{ uploadProgress }}%;')
      | {{ uploadProgress == 0 ? '' : uploadProgress + '%' }}
